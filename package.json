{
  "name": "@kdrdesigns/lego",
  "version": "1.0.0",
  "description": "Lego Design System - A playful React component library with chunky blocks aesthetic",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --clean",
    "dev": "tsup src/index.tsx --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "components",
    "design-system",
    "lego",
    "ui",
    "accessibility",
    "wcag"
  ],
  "author": "KDRDesigns",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KDRDesigns/Lego-.git"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
